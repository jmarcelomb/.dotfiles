{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "permission": {
    "edit": "ask",
  },
  "lsp": {
    "ty-python": {
      "command": [
        "ty",
        "server"
      ],
      "extensions": [
        ".py",
        ".pyi"
      ]
    }
  },
  "agent": {
    "autoaccept": {
      "mode": "primary",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      },
      "permission": {
        "edit": "allow"
      }
    }
  }
}
