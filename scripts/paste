#!/bin/sh

# Use a friendly blue color for messages
echoinfo() { printf "\033[1;36m%s\033[0m\n" "$@" >&2; } # Cyan text

if [ -t 0 ]; then # Check if input is from a terminal (not piped)
  echoinfo "ğŸ“‹ Paste your clipboard contents here and press Enter (Ctrl+D to finish):"
  clipboard_content=$(cat) # Capture full multi-line input
else
  clipboard_content=$(cat) # Read from pipe
fi

if [ -z "$clipboard_content" ]; then
  echoinfo "âš ï¸ No input received!"
  exit 1
fi

echoinfo "âœ… Echoing clipboard contents:"
echo "$clipboard_content"
